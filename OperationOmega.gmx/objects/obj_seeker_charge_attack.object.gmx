            <string>//Assign the correct object depending on if it's coming from an ally or an enemy
if(global.team[mid] = global.team[global.mymid])
    var created_object = obj_seeker_charge;
else
    var created_object = obj_seeker_charge_enemy;

//Hold the value of the origin object locally for faster reference    
var origin_object = global.playership[mid];
var create_x = origin_object.x+lengthdir_x(9, origin_object.facedir);
var create_y = origin_object.y+lengthdir_y(9, origin_object.facedir);
var team_number = global.team[mid]-1
var team_index = team_number*12;
var attack;
for(i = 0; i &lt; 360; i += 120)
{
    part_type_direction(obj_partsystem.seeker_cross[team_number],give_direction+i-15,give_direction+i+15,0,0);
    part_particles_create(obj_partsystem.system, create_x, create_y, obj_partsystem.seeker_cross[team_number], 20);
    
    attack = instance_create(create_x, create_y, created_object);
    attack.direction = give_direction;
    attack.speed += give_speed;
    attack.mid = mid;
    attack.image_angle = give_direction+i;
    attack.image_index = team_index;
    attack.team_index = team_index;
    if(i = 0)
    {
        attack.is_leading = true;
        var leader = attack;
    }
    else
        leader.follower[i/90] = attack;
    attack.leader = leader;
    attack.order = i/90;
}

var particle = obj_partsystem_top.needle_charge_burst[global.team[mid]-1];
var angle = 35-origin_object.speed*3;
part_type_direction(particle,give_direction-angle,give_direction+angle,0,0);
part_type_speed(particle,origin_object.speed+1,origin_object.speed+5,0,0);
part_particles_create(obj_partsystem_top.system, create_x, create_y, particle, 20);

instance_destroy();
</string>
